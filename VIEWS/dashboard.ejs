<body><h1>Welcome to Your Fitness Tracker</h1>
<a href="/add-workout">Add Workout</a>
<table>
    <tr>
        <th>Exercise</th>
        <th>Duration (mins)</th>
        <th>Calories Burned</th>
        <th>Date</th>
        <th>Action</th>
    </tr>
    <% workouts.forEach(workout => { %>
        <tr>
            <td><%= workout.exercise %></td>
            <td><%= workout.duration %></td>
            <td><%= workout.caloriesBurned %></td>
            <td><%= workout.date.toDateString() %></td>
            <td>
                <form action="/delete-workout/<%= workout._id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>
<a href="/logout">Logout</a>
<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      color: #333;
    }

    /* Container */
    .container {
      max-width: 900px;
      margin: 50px auto;
      padding: 20px;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    /* Header */
    h1 {
      text-align: center;
      font-size: 28px;
      margin-bottom: 20px;
      color: #2c3e50;
    }

    /* Links */
    a {
      color: #3498db;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Table */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      text-align: left;
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #2c3e50;
      color: #fff;
      text-transform: uppercase;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    /* Button */
    .button {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 15px;
      background-color: #28a745;
      color: #fff;
      border-radius: 4px;
      text-decoration: none;
    }

    .button:hover {
      background-color: #218838;
    }

    /* Footer Links */
    .footer {
      margin-top: 20px;
      text-align: center;
    }

    .logout {
      color: #e74c3c;
    }

    .logout:hover {
      text-decoration: underline;
    }
</style>
</body>